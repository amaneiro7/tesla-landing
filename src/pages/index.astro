				slot="button"
				btnName="Demo Drive"
				txtColor="white"
				bgColor="black"			
			/>
			<HeroImage 
				slot="image"
				alt="Model Y"
				src="/Model-Y.webp"
			/>
			</LayoutSection>
		</div>	
		
		<div class="snap-center">
			<LayoutSection
				title="Model S"
				link="View Inventory"
				color="black"
			>
			<Button 
				slot="button"
				btnName="Order Now"
				txtColor="black"
				bgColor="white"			
			/>
			<Button 
				slot="button"
				btnName="Demo Drive"
				txtColor="white"
				bgColor="black"			
			/>
			<HeroImage 
				slot="image"
				alt="Model S"
				src="/Model-S.webp"
			/>
			</LayoutSection>
		</div>	
		
		<div class="snap-center">
			<LayoutSection
				title="Model X"
				link="View Inventory"
				color="black"
			>
			<Button 
				slot="button"
				btnName="Order Now"
				txtColor="black"
				bgColor="white"			
			/>
			<Button 
				slot="button"
				btnName="Demo Drive"
				txtColor="white"
				bgColor="black"			
			/>
			<HeroImage 
				slot="image"
				alt="Model X"
				src="/Model-X.webp"
			/>
			</LayoutSection>
		</div>	
		<!-- Solar Energy -->
		<div class="snap-center">
			<LayoutSection
				title="Solar Panels"
				subtitle="Lowest Cost Solar Panels in America"
				color="black"
			>
			<Button 
				slot="button"
				btnName="Order Now"
				txtColor="black"
				bgColor="white"			
			/>
