---
import Layout from "../Layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import ChargeSection from "../components/ChargeSection.astro";
import LayoutSection from "../Layouts/LayoutSection.astro";
import HeroVideo from "../Atomic/HeroVideo.astro";
import Button from "../Atomic/Button.astro";
import HeroImage from "../Atomic/HeroImage.astro";
---

<Layout title="Tesla - El coche de tus sueÃ±os">
	<LandingHeader />
	
<main class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth">
	<!-- Main Section -->
	<div class="snap-center">
		<LayoutSection
			title="Experience Tesla"
			subtitle="Schedule a Demo Drive Today"
			color="white"
		>
		<Button 
			slot="button"
			btnName="Demo Drive"
			txtColor="white"
			bgColor="black/75"
			hovertxtColor="black"
			hoverbgColor="white"
			borderColor="white"		
		/>
		<HeroVideo 
			slot="video"
			src="/video.webm"
		/>
		</LayoutSection>
	</div>
	<!-- inventory section -->	
	<div class="snap-center">
		<LayoutSection
			title="Model 3"
			link="Lease from $429/mo"
			color="black"
		>
		<Button 
			slot="button"
			btnName="Order Now"
			txtColor="black"
			bgColor="white"			
		/>
		<Button 
			slot="button"
			btnName="Demo Drive"
			txtColor="white"
			bgColor="black"			
		/>
		<HeroImage 
			slot="image"
			alt="Model 3"
			src="/Model-3.webp"
		/>
		</LayoutSection>
	</div>	
	<div class="snap-center">
		<ChargeSection 
			title="Model S"
			subtitle="View Inventory"
			img="/Model-S.webp"
		/>
	</div>	
	<div class="snap-center">
		<ChargeSection 
			title="Solar Panels"
			subtitle="Lowest Cost Solar Panels in America"
			img="/SolarPanels.webp"
		/>
	</div>	
	<div class="snap-center">
		<ChargeSection 
			title="Solar Roof"
			subtitle="Produce Clean Energy From Your Roof"
			img="/SolarRoof.webp"
		/>
	</div>	
</main>
</Layout>


