---
export interface Props {
    title: string,
    subtitle: string
    img: string
}
const { title, subtitle, img } = Astro.props
---

<section 
    class="bg-black h-screen w-screen text-center relative overflow-hidden text-black"
    data-header-color="black"
    data-landing-section
>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class="pt-40 text-[40px] font-medium">{title}</h2>
            <p class="text-sm underline underline-offset-4">{subtitle}</p>
        </header>
        <footer class="flex flex-col flex-grow justify-end pb-20">
            <div class="flex gap-x-4 mx-auto">
                <a 
                    class="inline-block border-[3px] border-transparent bg-black/50 text-white text-sm rounded font-medium px-20 py-[6px] hover:bg-white/50 hover:text-black"
                    href="#">Order Now
                </a>
                <a 
                    class="inline-block border-[3px] border-transparent bg-white/50 text-black text-sm rounded font-medium px-20 py-[6px] hover:bg-black/50 hover:text-white transition-colors"
                    href="#">Demo Drive
                </a>
            </div>
        </footer>
    </div>				
    <div class="absolute top-0 bottom-0 w-full h-full z-10">
        <img 
            class="h-full w-full object-cover object-center"
            src={img}
            alt={title}
        >
    </div>
</section>